    anime_id INTEGER NOT NULL,
    type TEXT,
    name TEXT,
    url TEXT,
    PRIMARY KEY (anime_id, name),
    FOREIGN KEY (anime_id) REFERENCES AnimeEntity(id) ON DELETE CASCADE
);

